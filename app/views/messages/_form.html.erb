<% #投稿フォームを記述 %>

<%= form_for(@message) do |f| %>
    <% #エラーメッセージを表示するための部分 %>
    <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
            <li>
                <%= full_message %>
            </li>
            <% end %>
        </ul>
    </div>
    <% end %>
    
    <% #メッセージ投稿フォーム %>
        <div class="form-group">
            <%= f.label:Name,{class:'col-sm-1'} %>
            <div class="col-sm-11">
                <%= f.text_field :name, :class=>'form-control', :size=>7 %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label:Age,{class:'col-sm-1'} %>
            <div class="col-sm-11">
                <%= f.text_field :age, :class=>'form-control', :size=>7 %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :"Comment", {class:'col-sm-1'} %>
            <div class="col-sm-11">
                <%= f.text_area :body, :class=>'form-control', :cols=>20, :rows=>10 %>
            </div>
        </div>
        <div class="col-sm-offset-1 col-sm-11">
            <%= f.submit class:"btn btn-sm btn-info" %>
        </div>
        </div>
    
    
    <% end %>
