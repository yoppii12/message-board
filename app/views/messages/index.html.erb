<div class="panel panel-info">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                <% @messages.each do |message| %>
                <tr>
                    <th><span class="label label-info"><%= message.name %></span></th>
                    <td><%= message.body %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
    
    <%= form_for(Message.new) do |f| %>
    
        <div class="form-group">
            <span class="label label-info"><%= f.label:"Name",{class:'col-sm-1'} %></span>
            <div class="col-sm-11">
                <%= f.text_field :name, :class=>'form-control', :size=>7 %>
            </div>
        </div>
        <div class="form-group">
            <span class="label label-info"><%= f.label :"Comment", {class:'col-sm-1'} %></span>
            <div class="col-sm-11">
                <%= f.text_area :body, :class=>'form-control', :cols=>20, :rows=>10 %>
            </div>
        </div>
        <div class="col-sm-offset-1 col-sm-11">
            <%= f.submit class:"btn btn-sm btn-info" %>
        </div>
        </div>
    
    
    <% end %>
    