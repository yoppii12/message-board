<div class="panel panel-info">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                <% @messages.each do |message| %>
                <tr>
                    <th><span class="label label-info"><%= message.name %></span></th>
                    <td><%= message.body %>　(<%= link_to "edit", edit_message_path(message) %>
                    <%= link_to "destroy", message, method: :delete, data: {confirm: '削除してもよろしいですか？' } %>)</td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
    
    <% #部分テンプレートを読み込んでいる %>
    <%= render 'form' %>