<div class="panel panel-info">
    <div class="panel-heading">
        メッセージ一覧
    </div>
    
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                <% @messages.each do |message| %>
                <tr>
                    <th><span class="label label-info"><%= message.name %></span></th>
                    <td><%= message.body %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
    
    <%= form_for(Message.new) do |f| %>
    
        Name
        
        <%= f.text_field :name %>
    
    
        Comment
    
        <%= f.text_area :body, :maxlength => "10", :id=>"comment", :size => "10x1" %>
    
    
        <%= f.submit class: "btn btn-sm btn-primary" %>
    
    <% end %>